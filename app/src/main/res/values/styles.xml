<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- styl do zwiększenia czcionki w dolnym menu -->
    <style name="BottomNavigationViewText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PauseButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">13dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/category_green_dark_mode</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="iconGravity">textStart</item>      <!-- ikona po lewej -->
        <item name="iconPadding">8dp</item>           <!-- odstęp między ikoną a tekstem -->
        <item name="android:gravity">start</item>     <!-- tekst wyrównany do lewej -->
    </style>

    <style name="CustomDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@drawable/bg_dialog_rounded</item>
    </style>


</resources>
