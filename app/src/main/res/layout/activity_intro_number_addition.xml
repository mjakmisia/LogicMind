<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:padding="16dp">

    <!-- Guideline dla przesunięcia góry -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <!-- Guideline dla przesunięcia dołu przycisku -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomButtonGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.96" />

    <!-- Lewy górny krzyżyk (powrót) -->
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="10dp"
        android:background="@drawable/bg_rounded_light_gray"
        android:src="@drawable/ic_close"
        android:contentDescription="@string/close"
        app:layout_constraintTop_toTopOf="@id/topGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="#FFFFFF" />

    <!-- Prawy górny znak zapytania (pomoc) -->
    <ImageButton
        android:id="@+id/btnHelp"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="10dp"
        android:background="@drawable/bg_rounded_light_gray"
        android:src="@drawable/ic_help"
        android:contentDescription="@string/help"
        app:layout_constraintTop_toTopOf="@id/topGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="#FFFFFF" />

    <!-- Ikona gry -->
    <ImageView
        android:id="@+id/gameIcon"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/image_number_addition"
        app:layout_constraintTop_toBottomOf="@id/btnClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tytuł gry -->
    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/number_addition"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/gameIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sekcja gry (opis kategorii) -->
    <LinearLayout
        android:id="@+id/sectionProblemSolving"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_rounded_light_gray"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/gameTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rozwiązywanie problemów"
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trenuj umiejętność szybkiego sumowania liczb i rozwiązywania prostych problemów matematycznych"
            android:textColor="#CCCCCC"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Przycisk Rozpocznij -->
    <Button
        android:id="@+id/btnStartGame"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/start_game"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:backgroundTint="@color/category_green"
        app:layout_constraintBottom_toTopOf="@id/bottomButtonGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
