<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey">

    <!-- Górna linia pomocnicza -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <!-- Pasek czasu -->
    <com.example.logicmind.common.GameTimerProgressBar
        android:id="@+id/gameTimerProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:max="60"
        android:progress="60"
        android:progressTint="@color/white"
        android:indeterminate="false"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/topGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Szary pasek -->
    <View
        android:id="@+id/trackLine"
        android:layout_width="8dp"
        android:layout_height="0dp"
        android:background="#FF888888"
        android:elevation="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/gameTimerProgressBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Kontener na kółka -->
    <FrameLayout
        android:id="@+id/trackContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:clipChildren="false"
        app:layout_constraintTop_toBottomOf="@id/gameTimerProgressBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Niebieski kontener (lewy dół) -->
    <FrameLayout
        android:id="@+id/blueContainer"
        android:layout_width="120dp"
        android:layout_height="320dp"
        android:layout_marginStart="-30dp"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/bg_blue_corner"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Czerwony kontener (prawy dół) -->
    <FrameLayout
        android:id="@+id/redContainer"
        android:layout_width="120dp"
        android:layout_height="320dp"
        android:layout_marginEnd="-30dp"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/bg_red_corner"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Przycisk pauzy -->
    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:padding="12dp"
        android:background="@drawable/bg_rounded_light_gray"
        android:src="@drawable/ic_pause"
        android:contentDescription="@string/pause"
        app:tint="@color/black"
        app:layout_constraintTop_toTopOf="@id/topGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground" />

    <!-- Odliczanie -->
    <TextView
        android:id="@+id/countdownText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Gwiazdki -->
    <LinearLayout
        android:id="@+id/starContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="@id/topGuideline"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/starIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/icon_star"
            android:contentDescription="@string/icon_star" />

        <TextView
            android:id="@+id/starCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Nakładka pauzy -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pauseOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="#65000000"
        android:elevation="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include layout="@layout/pause_overlay" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
