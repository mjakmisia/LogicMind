<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    tools:ignore="ContentDescription">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <com.example.logicmind.common.GameTimerProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/gameTimerProgressBar"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:max="60"
        android:progress="60"
        android:progressTint="@color/white"
        android:indeterminate="false"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/topGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/gameContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:weightSum="2"
        android:padding="8dp"
        android:clipChildren="true"
        app:layout_constraintTop_toBottomOf="@id/gameTimerProgressBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/leftLaneContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="#333333"
            android:clickable="true"
            android:clipChildren="true"
            android:contentDescription="@string/left_lane_description"
            android:focusable="true">

            <ImageView
                android:id="@+id/roadLeft1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/bg_road_generated" />

            <ImageView
                android:id="@+id/roadLeft2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/bg_road_generated"
                android:translationY="-1000dp"
                tools:ignore="VisualLintBounds" />

            <ImageView
                android:id="@+id/carLeft"
                android:layout_width="150dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/car_icon"
                android:translationY="250dp"
                tools:ignore="ContentDescription,VisualLintBounds" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/rightLaneContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="#333333"
            android:clickable="true"
            android:clipChildren="true"
            android:contentDescription="@string/right_lane_description"
            android:focusable="true">

            <ImageView
                android:id="@+id/roadRight1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/bg_road_generated" />

            <ImageView
                android:id="@+id/roadRight2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/bg_road_generated"
                android:translationY="-1000dp"
                tools:ignore="VisualLintBounds" />

            <ImageView
                android:id="@+id/carRight"
                android:layout_width="150dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/car_icon"
                android:translationY="250dp"
                tools:ignore="ContentDescription,VisualLintBounds" />

        </FrameLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:padding="12dp"
        android:background="@drawable/bg_rounded_light_gray"
        android:src="@drawable/ic_pause"
        android:contentDescription="@string/pause"
        app:tint="?attr/text_dark"
        app:layout_constraintTop_toTopOf="@id/topGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        tools:ignore="PrivateResource" />

    <TextView
        android:id="@+id/countdownText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:elevation="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="@id/topGuideline"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/starIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/icon_star"
            android:contentDescription="@string/icon_star" />

        <TextView
            android:id="@+id/starCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-medium"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pauseOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="#88000000"
        android:elevation="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include layout="@layout/pause_overlay" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>