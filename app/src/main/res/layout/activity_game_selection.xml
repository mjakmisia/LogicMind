<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/milky">

    <!-- Linia dzieląca ekran na pół -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <!-- Pasek z pytaniem na środku -->
    <TextView
        android:id="@+id/tvQuestionChooseGame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/choose_game_request"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:padding="14dp"
        android:background="@color/category_yellow_dark_mode"
        app:layout_constraintTop_toTopOf="@id/guidelineCenter"
        app:layout_constraintBottom_toBottomOf="@id/guidelineCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Górna połowa: Gra 1 -->
    <LinearLayout
        android:id="@+id/game1Container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#FFFFFF"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvQuestionChooseGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/game1Icon"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_close" />

        <TextView
            android:id="@+id/game1Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_1"
            android:textSize="22sp"
            android:textColor="@color/grey"
            android:layout_marginTop="12dp" />
    </LinearLayout>

    <!-- Dolna połowa: Gra 2 -->
    <LinearLayout
        android:id="@+id/game2Container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvQuestionChooseGame">

        <ImageView
            android:id="@+id/game2Icon"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_close" />

        <TextView
            android:id="@+id/game2Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/game_2"
            android:textColor="@color/grey"
            android:textSize="22sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
