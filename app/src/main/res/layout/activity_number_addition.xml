<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:padding="16dp">

    <!-- Pasek postępu czasu gry -->
    <com.example.logicmind.common.GameTimerProgressBar
        android:id="@+id/gameTimerProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:max="60"
        android:progress="60"
        android:progressTint="@color/white"
        android:indeterminate="false"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tekst z docelową sumą -->
    <TextView
        android:id="@+id/targetNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/gameTimerProgressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Odliczanie początkowe (3,2,1,Start!) -->
    <TextView
        android:id="@+id/countdownText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textColor="#FFFFFF"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Siatka przycisków -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/numberGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/targetNumberText"
        app:layout_constraintBottom_toTopOf="@id/pauseButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Przycisk pauzy -->
    <Button
        android:id="@+id/pauseButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Pauza"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="#222222"
        android:backgroundTint="@color/category_green"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nakładka pauzy -->
    <LinearLayout
        android:id="@+id/pauseOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Tekst pauzy -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gra wstrzymana"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Przycisk wznowienia -->
        <Button
            android:id="@+id/resumeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wznów"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#222222"
            android:backgroundTint="@color/category_green" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
