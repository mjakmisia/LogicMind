<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey">

    <!-- Górna linia pomocnicza do ustawiania topu gridu i przycisku -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <!-- Grid z kartami -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:background="@color/dark_grey"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/topGuideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1" />

    <!-- Przycisk pauzy -->
    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="10dp"
        android:background="@drawable/bg_rounded_light_gray"
        android:src="@drawable/ic_pause"
        android:contentDescription="@string/pause"
        app:tint="@android:color/white"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/topGuideline"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tekst odliczania przed rozpoczęciem gry -->
    <TextView
        android:id="@+id/countdownText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Overlay pauzy (zawiera przyciski wznowienia, restartu, wyjścia i pomocy) -->
    <include
        android:id="@+id/pauseOverlay"
        layout="@layout/pause_overlay"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
