                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <!-- Gra 1 -->
                    <LinearLayout
                        android:id="@+id/layoutCoordinationGame1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCoordinationGame1Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/coordination_game1"
                            android:textColor="?attr/text_dark"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:id="@+id/layoutCoordinationGame1Stats"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvCoordinationGame1Reaction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/avg_reaction_time_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvCoordinationGame1Accuracy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/accuracy_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvCoordinationGame1Total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_points_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvCoordinationGame1Best"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/highest_score_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Gra 2 -->
                    <LinearLayout
