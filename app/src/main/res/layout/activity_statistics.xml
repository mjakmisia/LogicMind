<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Scrollowalna część (cała zawartość statystyk) -->
    <ScrollView
        android:id="@+id/statisticsScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tytuł -->
            <TextView
                android:id="@+id/tvStatisticsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="12dp"
                android:text="Statystyki Gier"
                android:textColor="?attr/text_dark"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- ========================== -->
            <!-- Sekcja: Koordynacja -->
            <!-- ========================== -->
            <TextView
                android:id="@+id/tvCoordinationHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Koordynacja"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvCoordinationReaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Średni czas reakcji: 1.1s"
                        android:textColor="#444"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvCoordinationAccuracy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Poprawność odpowiedzi: 88%"
                        android:textColor="#444"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvCoordinationTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Łączna ilość punktów: 1350"
                        android:textColor="#444"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvCoordinationBest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Najwyższy wynik: 260"
                        android:textColor="#444"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        <!-- ========================== -->
        <!-- Sekcja: Skupienie -->
        <!-- ========================== -->
        <TextView
            android:id="@+id/tvFocusHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Skupienie"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvFocusReaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Średni czas reakcji: 1.0s"
                    android:textColor="#444"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvFocusAccuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Poprawność odpowiedzi: 91%"
                    android:textColor="#444"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvFocusTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Łączna ilość punktów: 1550"
                    android:textColor="#444"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvFocusBest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Najwyższy wynik: 280"
                    android:textColor="#444"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ========================== -->
        <!-- Sekcja: Pamięć -->
        <!-- ========================== -->
        <TextView
            android:id="@+id/tvMemoryHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Pamięć"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvMemoryReaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Średni czas reakcji: 1.4s"
                    android:textColor="#444"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvMemoryAccuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Poprawność odpowiedzi: 76%"
                    android:textColor="#444"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvMemoryTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Łączna ilość punktów: 980"
                    android:textColor="#444"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvMemoryBest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Najwyższy wynik: 210"
                    android:textColor="#444"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ========================== -->
        <!-- Sekcja: Rozwiązywanie problemów -->
        <!-- ========================== -->
        <TextView
            android:id="@+id/tvLogicHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Rozwiązywanie problemów"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="80dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvLogicReaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Średni czas reakcji: 1.3s"
                    android:textColor="#444"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvLogicAccuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Poprawność odpowiedzi: 82%"
                    android:textColor="#444"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvLogicTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Łączna ilość punktów: 1200"
                    android:textColor="#444"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvLogicBest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Najwyższy wynik: 240"
                    android:textColor="#444"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
            </LinearLayout>
    </ScrollView>


    <!-- Bottom navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="?attr/colorOnBackgroundMenu"
        app:itemIconTint="@color/selector_nav_item_color"
        app:itemTextColor="@color/selector_nav_item_color"
        app:itemTextAppearanceActive="@style/BottomNavigationViewText"
        app:itemTextAppearanceInactive="@style/BottomNavigationViewText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconSize="40dp"
        app:labelVisibilityMode="labeled" />

</androidx.constraintlayout.widget.ConstraintLayout>
