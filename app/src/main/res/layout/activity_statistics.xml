                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvMemoryGame1Total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_points_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvMemoryGame1Best"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/highest_score_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Gra 2 -->
                    <LinearLayout
                        android:id="@+id/layoutMemoryGame2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/tvMemoryGame2Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_match"
                            android:textColor="?attr/text_dark"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:id="@+id/layoutMemoryGame2Stats"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvMemoryGame2Reaction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/avg_reaction_time_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvMemoryGame2Accuracy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/accuracy_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvMemoryGame2Total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_points_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvMemoryGame2Best"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/highest_score_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ================= Kategoria: Skupienie ================= -->
            <TextView
                android:id="@+id/tvAttentionHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/category_attention"
                android:textColor="?attr/text_dark"
                android:textSize="25sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <!-- Gra 1 -->
                    <LinearLayout
                        android:id="@+id/layoutAttentionGame1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvAttentionGame1Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/word_search"
                            android:textColor="?attr/text_dark"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:id="@+id/layoutAttentionGame1Stats"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvAttentionGame1Reaction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/avg_reaction_time_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvAttentionGame1Accuracy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/accuracy_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvAttentionGame1Total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_points_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvAttentionGame1Best"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/highest_score_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Gra 2 -->
                    <LinearLayout
                        android:id="@+id/layoutAttentionGame2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/tvAttentionGame2Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/left_or_right"
                            android:textColor="?attr/text_dark"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:id="@+id/layoutAttentionGame2Stats"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvAttentionGame2Reaction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/avg_reaction_time_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvAttentionGame2Accuracy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/accuracy_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvAttentionGame2Total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_points_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvAttentionGame2Best"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/highest_score_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ================= Kategoria: Rozwiązywanie problemów ================= -->
            <TextView
                android:id="@+id/tvReasoningHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/category_reasoning"
                android:textColor="?attr/text_dark"
                android:textSize="25sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <!-- Gra 1 -->
                    <LinearLayout
                        android:id="@+id/layoutReasoningGame1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvReasoningGame1Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/number_addition"
                            android:textColor="?attr/text_dark"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:id="@+id/layoutReasoningGame1Stats"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvReasoningGame1Reaction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/avg_reaction_time_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvReasoningGame1Accuracy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/accuracy_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvReasoningGame1Total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_points_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvReasoningGame1Best"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/highest_score_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Gra 2 -->
                    <LinearLayout
                        android:id="@+id/layoutReasoningGame2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/tvReasoningGame2Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/path_change"
                            android:textColor="?attr/text_dark"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:id="@+id/layoutReasoningGame2Stats"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvReasoningGame2Reaction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/avg_reaction_time_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvReasoningGame2Accuracy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/accuracy_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvReasoningGame2Total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_points_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvReasoningGame2Best"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/highest_score_value"
                                android:textColor="?attr/text_dark"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Widok dla niezalogowanego użytkownika -->
    <TextView
        android:id="@+id/layoutNotLoggedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_text_statistics"
        android:textSize="23sp"
        android:textColor="?attr/text_dark"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_button_text"
        android:textSize="18sp"
        android:textColor="?attr/colorOnPrimary"
        android:background="@drawable/bg_rounded_light_gray"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layoutNotLoggedIn"
        app:layout_constraintBottom_toTopOf="@id/includeBottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dolne menu -->
    <include
        layout="@layout/bottom_navigation"
        android:id="@+id/includeBottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>