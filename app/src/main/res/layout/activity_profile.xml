<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnBackground">

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Górna linia pomocnicza -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/topGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.08" />

            <!-- Nagłówek -->
            <TextView
                android:id="@+id/profileHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_account"
                android:textSize="28sp"
                android:textColor="?attr/text_dark"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/topGuideline"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Nazwa użytkownika -->
            <TextView
                android:id="@+id/textUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="JanKowalski"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="?attr/text_dark"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/profileHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Aktualny streak po lewej -->
            <LinearLayout
                android:id="@+id/currentStreakLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_current_streak"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/textUsername"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/bestStreakLayout"
                app:layout_constraintWidth_percent="0.45">

                <TextView
                    android:id="@+id/labelCurrentStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_streak"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnPrimary"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/textCurrentStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 dni"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimary"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Najlepszy streak po prawej -->
            <LinearLayout
                android:id="@+id/bestStreakLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_best_streak"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/textUsername"
                app:layout_constraintStart_toEndOf="@id/currentStreakLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.45">

                <TextView
                    android:id="@+id/labelBestStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/best_streak"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnPrimary"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/textBestStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 dni"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimary"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Mini kalendarz tygodnia -->
            <LinearLayout
                android:id="@+id/weekCalendar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/currentStreakLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Każdy dzień: Container z vertikalnym układem -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="4dp">

                    <ImageView
                        android:id="@+id/arrowMon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/dayMon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P"
                        android:textSize="22sp"
                        android:textColor="?attr/text_dark"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                    <ImageView
                        android:id="@+id/flameMon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_flame"
                        app:tint="@color/light_grey"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

                    <ImageView
                        android:id="@+id/arrowTue"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/dayTue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="W"
                        android:textSize="22sp"
                        android:textColor="?attr/text_dark"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                    <ImageView
                        android:id="@+id/flameTue"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_flame"
                        app:tint="@color/light_grey"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

                    <ImageView
                        android:id="@+id/arrowWed"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/dayWed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ś"
                        android:textSize="22sp"
                        android:textColor="?attr/text_dark"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                    <ImageView
                        android:id="@+id/flameWed"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_flame"
                        app:tint="@color/light_grey"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

                    <ImageView
                        android:id="@+id/arrowThu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/dayThu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C"
                        android:textSize="22sp"
                        android:textColor="?attr/text_dark"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                    <ImageView
                        android:id="@+id/flameThu"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_flame"
                        app:tint="@color/light_grey"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

                    <ImageView
                        android:id="@+id/arrowFri"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/dayFri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P"
                        android:textSize="22sp"
                        android:textColor="?attr/text_dark"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                    <ImageView
                        android:id="@+id/flameFri"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_flame"
                        app:tint="@color/light_grey"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

                    <ImageView
                        android:id="@+id/arrowSat"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/daySat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S"
                        android:textSize="22sp"
                        android:textColor="?attr/text_dark"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                    <ImageView
                        android:id="@+id/flameSat"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_flame"
                        app:tint="@color/light_grey"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="4dp">

                    <ImageView
                        android:id="@+id/arrowSun"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/daySun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N"
                        android:textSize="22sp"
                        android:textColor="?attr/text_dark"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                    <ImageView
                        android:id="@+id/flameSun"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_flame"
                        app:tint="@color/light_grey"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Ostatnio zagrane kategorie -->
            <TextView
                android:id="@+id/recentGamesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_played"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="?attr/text_dark"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/weekCalendar"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:id="@+id/recentGamesLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/recentGamesTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/imageGame1"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:src="@drawable/image_color_sequence"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_rounded_light_gray" />

                <ImageView
                    android:id="@+id/imageGame2"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:src="@drawable/image_fruit_sort"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/bg_rounded_light_gray" />

                <ImageView
                    android:id="@+id/imageGame3"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:src="@drawable/image_card_match"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_rounded_light_gray" />
            </LinearLayout>

            <!-- Przycisk Resetuj postęp -->
            <Button
                android:id="@+id/buttonResetProgress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reset_progress"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="?attr/colorOnPrimary"
                android:background="@drawable/bg_rounded_light_gray"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:drawablePadding="28dp"
                app:layout_constraintTop_toBottomOf="@id/recentGamesLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Polityka aplikacji -->
            <LinearLayout
                android:id="@+id/policyLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_rounded_light_gray"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                app:layout_constraintTop_toBottomOf="@id/buttonResetProgress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/textPolicy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_policy"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnPrimary"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iconArrowPolicy"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/textGrey" />
            </LinearLayout>

            <!-- Przycisk Usuń konto -->
            <Button
                android:id="@+id/buttonDeleteAccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/deleteAccount"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="?attr/colorOnPrimary"
                android:backgroundTint="@color/purple_500"
                android:background="@drawable/bg_rounded_light_gray"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/policyLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Dolny pasek nawigacji -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="?attr/colorOnBackgroundMenu"
        app:itemIconTint="@color/selector_nav_item_color"
        app:itemTextColor="@color/selector_nav_item_color"
        app:itemTextAppearanceActive="@style/BottomNavigationViewText"
        app:itemTextAppearanceInactive="@style/BottomNavigationViewText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconSize="40dp"
        app:labelVisibilityMode="labeled" />
</androidx.constraintlayout.widget.ConstraintLayout>