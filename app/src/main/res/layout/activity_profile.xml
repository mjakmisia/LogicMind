<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/pageBackground">

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/includeBottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Reszta zawartości NestedScrollView pozostaje bez zmian -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Górna linia pomocnicza -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/topGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.08" />

            <!-- Nagłówek -->
            <TextView
                android:id="@+id/profileHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_account"
                android:textSize="28sp"
                android:textColor="?attr/text_dark"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/topGuideline"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Nazwa użytkownika -->
            <TextView
                android:id="@+id/textUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="username"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="?attr/text_dark"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/profileHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Aktualny streak po lewej -->
            <LinearLayout
                android:id="@+id/currentStreakLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_current_streak"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/textUsername"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/bestStreakLayout"
                app:layout_constraintWidth_percent="0.45">

                <TextView
                    android:id="@+id/labelCurrentStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_streak"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/textCurrentStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 dni"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Najlepszy streak po prawej -->
            <LinearLayout
                android:id="@+id/bestStreakLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_best_streak"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/textUsername"
                app:layout_constraintStart_toEndOf="@id/currentStreakLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.45">

                <TextView
                    android:id="@+id/labelBestStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/best_streak"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/textBestStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 dni"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Mini kalendarz tygodnia -->
            <LinearLayout
                android:id="@+id/weekCalendar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/currentStreakLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Każdy dzień: Container z vertikalnym układem -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="4dp">

                    <ImageView
                        android:id="@+id/arrowMon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/dayMon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P"
                        android:textSize="22sp"
                        android:textColor="?attr/text_dark"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                    <ImageView
                        android:id="@+id/flameMon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_flame"
                        app:tint="@color/light_gray_2"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

                    <ImageView
                        android:id="@+id/arrowTue"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/dayTue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="W"
                        android:textSize="22sp"
                        android:textColor="?attr/text_dark"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                    <ImageView
                        android:id="@+id/flameTue"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_flame"
                        app:tint="@color/light_gray_2"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

                    <ImageView
                        android:id="@+id/arrowWed"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/dayWed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ś"
                        android:textSize="22sp"
                        android:textColor="?attr/text_dark"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                    <ImageView
                        android:id="@+id/flameWed"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_flame"
                        app:tint="@color/light_gray_2"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

                    <ImageView
                        android:id="@+id/arrowThu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/dayThu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C"
                        android:textSize="22sp"
                        android:textColor="?attr/text_dark"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                    <ImageView
                        android:id="@+id/flameThu"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_flame"
                        app:tint="@color/light_gray_2"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

                    <ImageView
                        android:id="@+id/arrowFri"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/dayFri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P"
                        android:textSize="22sp"
                        android:textColor="?attr/text_dark"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                    <ImageView
                        android:id="@+id/flameFri"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_flame"
                        app:tint="@color/light_gray_2"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

                    <ImageView
                        android:id="@+id/arrowSat"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/daySat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S"
                        android:textSize="22sp"
                        android:textColor="?attr/text_dark"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                    <ImageView
                        android:id="@+id/flameSat"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_flame"
                        app:tint="@color/light_gray_2"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="4dp">

                    <ImageView
                        android:id="@+id/arrowSun"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/daySun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N"
                        android:textSize="22sp"
                        android:textColor="?attr/text_dark"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                    <ImageView
                        android:id="@+id/flameSun"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_flame"
                        app:tint="@color/light_gray_2"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Przycisk Resetuj postęp -->
            <Button
                android:id="@+id/buttonResetProgress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reset_progress"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="?attr/colorOnPrimary"
                android:background="@drawable/bg_rounded_light_gray"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:drawablePadding="28dp"
                app:layout_constraintTop_toBottomOf="@id/weekCalendar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Polityka aplikacji -->
            <LinearLayout
                android:id="@+id/policyLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_rounded_light_gray"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                app:layout_constraintTop_toBottomOf="@id/buttonResetProgress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/textPolicy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_policy"
                    android:textSize="18sp"
                    android:textColor="?attr/text_dark" />

                <ImageView
                    android:id="@+id/iconArrowPolicy"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_play"
                    app:tint="@color/textGray" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonChangePassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_rounded_light_gray"
                android:text="@string/change_password_title"
                android:textAllCaps="true"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/policyLayout" />

            <!-- Przycisk Wyloguj się -->
            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_rounded_light_gray"
                android:text="@string/logout"
                android:textAllCaps="true"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonChangePassword" />

            <!-- Przycisk Usuń konto -->
            <!-- W motywach opartych o Material Components (Theme.MaterialComponents.*)
            Android domyślnie nakłada kolor colorButtonNormal jako backgroundTint na wszystkie Button
            dlatego na button jest nakładany tint z motywu-->
            <Button
                android:id="@+id/buttonDeleteAccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/deleteAccount"
                android:backgroundTint="@null"
                android:backgroundTintMode="src_over"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="?attr/colorOnPrimary"
                android:background="@drawable/bg_rounded_light_red"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/buttonLogout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Widok dla niezalogowanego użytkownika -->
    <TextView
        android:id="@+id/textLoginPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_text_profile"
        android:textSize="23sp"
        android:textColor="?attr/text_dark"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_button_text"
        android:textSize="18sp"
        android:textColor="?attr/colorOnPrimary"
        android:background="@drawable/bg_rounded_light_gray"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/textLoginPrompt"
        app:layout_constraintBottom_toTopOf="@id/includeBottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <!-- Dolny pasek nawigacji -->
    <include
        layout="@layout/bottom_navigation"
        android:id="@+id/includeBottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>