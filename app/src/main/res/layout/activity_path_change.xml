<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    tools:ignore="ContentDescription">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.logicmind.common.GameTimerProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/gameTimerProgressBar"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/topGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:max="90"
        android:progress="90" />

    <TextView
        android:id="@+id/streakCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero_streak"
        android:textSize="18sp"
        android:textColor="#666666" android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="85dp"
        app:layout_constraintTop_toBottomOf="@id/gameTimerProgressBar"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_rounded_light_gray"
        android:src="@drawable/ic_pause"
        app:layout_constraintTop_toTopOf="@id/topGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/pause" />

    <LinearLayout
        android:id="@+id/starContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/topGuideline"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:id="@+id/starIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/icon_star"
            android:contentDescription="@string/icon_star" />
        <TextView
            android:id="@+id/starCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@color/dark_gray"

        app:rowCount="6"
        app:columnCount="5"

        app:layout_constraintTop_toBottomOf="@id/gameTimerProgressBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintDimensionRatio="5:6"
        android:clipToPadding="false"
        android:clipChildren="false">

        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="0" app:layout_column="0" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_corner_br">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_corner" android:rotation="180" android:scaleType="fitCenter" />
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="0" app:layout_column="1" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="goal_red">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/path_goal_placeholder_red"
                tools:ignore="ImageContrastCheck" />
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="0" app:layout_column="2" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_empty" />
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="0" app:layout_column="3" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_corner_br">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_corner" android:rotation="180" android:scaleType="fitCenter" />
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="0" app:layout_column="4" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="goal_yellow">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_goal_placeholder_yellow" />
        </FrameLayout>

        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="1" app:layout_column="0" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_vert">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_straight" android:rotation="0" android:scaleType="fitCenter" />
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="1" app:layout_column="1" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_empty" />
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="1" app:layout_column="2" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_empty" />
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="1" app:layout_column="3" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_vert">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_straight" android:rotation="0" android:scaleType="fitCenter" />
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="1" app:layout_column="4" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_empty" />

        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="2" app:layout_column="0" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="switch_A" android:background="?attr/selectableItemBackground">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_switch_background" />
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitCenter" app:tint="#000000" />
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="2" app:layout_column="1" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="goal_green">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_goal_placeholder_green" />
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="2" app:layout_column="2" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_corner_br">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_corner" android:rotation="180" android:scaleType="fitCenter" />
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="2" app:layout_column="3" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="switch_B" android:background="?attr/selectableItemBackground">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_switch_background" />
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitCenter" app:tint="#000000" />
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="2" app:layout_column="4" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_empty" />

        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="3" app:layout_column="0" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_vert">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_straight" android:rotation="0" android:scaleType="fitCenter" />
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="3" app:layout_column="1" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_empty" />
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="3" app:layout_column="2" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_vert">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_straight" android:rotation="0" android:scaleType="fitCenter" />
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="3" app:layout_column="3" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_corner_tr">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_corner" android:rotation="90" android:scaleType="fitCenter" />
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="3" app:layout_column="4" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="goal_blue">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_goal_placeholder_blue" />
        </FrameLayout>

        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="4" app:layout_column="0" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_vert">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_straight" android:rotation="0" android:scaleType="fitCenter" />
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="4" app:layout_column="1" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_corner_br">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_corner" android:rotation="180" android:scaleType="fitCenter" />
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="4" app:layout_column="2" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="switch_C" android:background="?attr/selectableItemBackground">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_switch_background" />
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitCenter" app:tint="#000000" />
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="4" app:layout_column="3" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_empty" />
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="4" app:layout_column="4" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_empty" />

        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="5" app:layout_column="0" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_corner_tr">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_corner" android:rotation="90" android:scaleType="fitCenter" />
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="5" app:layout_column="1" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_corner_tl">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_corner" android:rotation="0" android:scaleType="fitCenter" />
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="5" app:layout_column="2" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_corner_tr">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_corner" android:rotation="90" android:scaleType="fitCenter" />
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="5" app:layout_column="3" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_horiz">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_straight" android:rotation="90" android:scaleType="fitCenter" />
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="0dp" app:layout_row="5" app:layout_column="4" app:layout_rowWeight="1" app:layout_columnWeight="1" app:layout_gravity="fill" android:tag="cell_start">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/path_start_placeholder" />
        </FrameLayout>

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/countdownText"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pauseOverlay"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#65000000"
        android:elevation="16dp">
        <include layout="@layout/pause_overlay" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>